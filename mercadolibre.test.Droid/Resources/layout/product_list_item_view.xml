<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@android:color/transparent">
    <LinearLayout
        android:background="@drawable/product_item_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:contentDescription="@string/img_product_desc"
            android:id="@+id/imgProductImage"
            android:layout_width="400dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="400dp"/>
        <TextView
            android:id="@+id/lblProductName"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            android:text="Motorola"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24dp"
                android:text="$500.000"/>
            <TextView
                android:id="@+id/lblFreeShipping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@android:color/holo_green_light"
                android:text="Envio gratis"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lblLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textSize="12dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/lblProductPrice"/>
        <Button
            android:layout_margin="8dp"
            android:id="@+id/btnSeeDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/yellowPrimary"
            android:text="@string/see_details_btn"/>
    </LinearLayout>
</LinearLayout>
